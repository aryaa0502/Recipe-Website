<!DOCTYPE html>
<html>

<head>
  <title>Taco Recipes</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Shadows+Into+Light&family=Titillium+Web:wght@300&display=swap" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="/styles/main.css">
</head>

<body>
  <div class="card">
    <h1>&nbsp; Taco Town🌮 &nbsp;</h1>

  <form action="/recipe" method="POST" class="buttons">
    <button type="submit" value="chicken" name="choice">🍗</button>
    <button type="submit" value="beef" name="choice">🥩</button>
    <button type="submit" value="fish" name="choice">🐟</button>
  </form>
  
  <div id="recipeContainer" class="hidden">

    <!-- If no recipe yet, show: -->
    <!-- <h2>Pick your favourite taco ingredient 👆</h2> -->
    <!-- Else, show the recipe name e.g. <h2>Recipe name</h2>-->

    <% if(locals.recipe){%>
      <h2 style="font-size: 35px;"><%= recipe.name %></h2>
      <h3>Ingredients:</h3>
      <ul id="ingredientsList">
        <li><%= recipe.ingredients.protein.name %>, <%= recipe.ingredients.protein.preparation %></li>
        <li><%= recipe.ingredients.salsa.name %></li>
        <% recipe.ingredients.toppings.forEach(topping=> { %>
          <li>
            <%= topping.quantity %> of <%= topping.name %>
          </li>
          <% }) %>
      </ul>
    <% } else { %>
      <h2>Pick your favourite taco ingredient 👆</h2>
    <% } %>
  </div>
  </div>
  
</body>

</html>
